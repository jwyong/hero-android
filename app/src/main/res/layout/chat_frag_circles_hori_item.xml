<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="data"
            type="Integer" />

        <variable
            name="frag"
            type="com.ntu.hero.chat.fragments.circles_hori.ChatFragCirclesHori" />
    </data>

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="@{() -> frag.itemOnClick(data)}"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_circle_fill"
        android:backgroundTint="@{data}"
        tools:backgroundTint="@color/lightBrown1" />

</layout>